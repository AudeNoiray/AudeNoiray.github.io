<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign supervision = data[1] | sort: 'date' | reverse %}
  {% for item in supervision %}
    <li class="list-group-item">
      <div class="row">
        <!-- Date -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if item.date %}
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {{ item.date }}
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          {% endif %}
        </div>

        <!-- Content -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="ml-1 ml-md-4 mb-1" style="font-size: 0.95rem;">
            <strong>{{ item.name }}</strong> ({{ item.level }}) â€” {{ item.title -}}
            {%- if item.institution %}, {{ item.institution }}{% endif -%}
            {%- if item.note -%}
              . <span class="text-muted">{{ item.note }}</span>
            {%- endif %}
          </h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
